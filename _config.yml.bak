# Permalinks
#
# Use of `relative_permalinks` ensures post links from the index work properly.
permalink:           pretty
relative_permalinks: true

# Setup
title:               Gotz Networks
tagline:             Because blinking lights are cool
url:                 http://gotz.co
paginate:            1
baseurl:             "/"

# Assets
#
# We specify the directory for Jekyll so we can use @imports.
sass:
  sass_dir:          _sass
  style:            :compressed

# About/contact
author:
  name:              Nate Gotz
  url:               https://twitter.com/nlgotz

# Custom vars
version:             1.0.0
github:
  repo:              https://github.com/nlgotz/nlgotz.github.com

pages_list:
  About: '/about'
  Archive: '/archive'
  Feed: '/atom.xml'

gems:
  [jekyll-paginate]
